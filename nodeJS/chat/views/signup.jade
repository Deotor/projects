extends layout
extends menu

block signup
    div.clear
    h2.header-sing SIGN UP
    h4.error #{error}
    form#signup-form.col-xs-12.col-sm-9.col-md-6(role='form', action="/signup", method="post", enctype="multipart/form-data")
        div.form-group
            label(for="exampleInputLogin") Login
            input.form-control#exampleInputLogin(type="text", name="username", placeholder="Login", required)
            label(for="exampleInputPassword") Password
            input.form-control#exampleInputPassword(type="password", name="password", placeholder="Password", required)
            label(for="exampleInputFirstName") First Name
            input.form-control#exampleInputFirstName(type="text", name="firstName", placeholder="First Name", required)
            label(for="exampleInputLastName") Last Name
            input.form-control#exampleInputLastName(type="text", name="lastName", placeholder="Last Name", required)
            label(for="avatar") Avatar
            input#avatar.form-control(type="file", accept="image/*", name="avatar")
            div.clear
            button.btn.btn-default#signup-btn(type="submit") Sign Up
    script(src='/js/valid.js' defer)